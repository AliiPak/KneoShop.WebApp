@using KenoShop.WebApp.ViewModels.Order
@model CreateOrderViewModel
@{
    ViewData["Title"] = "سفارش جدید";
}
<form asp-area="Admin" asp-controller="Order" asp-action="CreateOrder" method="post">
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-9">
                <div class="card mb-4">
                    <div class="card-header d-flex align-items-center justify-content-between">
                        <h5 class="mb-0">سفارش جدید</h5>
                        <small class="text-muted float-end">برچسب پیش‌فرض</small>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="exampleFormControlSelect1">نام کاربر</label>
                            <div class="col-sm-10">
                                <select class="form-select" asp-for="UserID" asp-items="@(new SelectList(ViewBag.ListOfUsers, "Value", "Text"))" aria-label="Default select example">
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-4 col-md-6 col-sm-12 mb-4">
                            <label class="form-label" for="date-mask">تاریخ سفارش</label>
                            <input type="text" asp-for="CreateDate" class="form-control date-mask text-start" dir="ltr" placeholder="YYYY/MM/DD">
                        </div>
                        <div class="col-xl-4 col-md-6 col-sm-12 mb-4">
                            <label class="form-label" for="date-mask">تاریخ پرداخت</label>
                            <input type="text" asp-for="PaymentDate" class="form-control date-mask text-start" dir="ltr" placeholder="YYYY/MM/DD">
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">کد پیگیری</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="RefCode">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-message">توضیحات</label>
                            <div class="col-sm-10">
                                <textarea id="basic-default-message" asp-for="Description" class="form-control" placeholder="متن توضیحات را اینجا بنویسید"></textarea>
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">ذخیره</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>