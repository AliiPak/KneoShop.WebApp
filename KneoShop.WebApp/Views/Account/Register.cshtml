<main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index-1.html">خانه</a></li>
                <li class="breadcrumb-item"><a href="#">صفحات</a></li>
                <li class="breadcrumb-item active" aria-current="page">ورود / ثبت نام</li>
            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17"
         style="background-image: url('/StoreSite/assets/images/backgrounds/login-bg.jpg')">
        <div class="container">
            <div class="form-box">
                <div class="form-tab">
                    <ul class="nav nav-pills nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="register-tab-2" data-toggle="tab" href="#register-2"
                               role="tab" aria-controls="register-2" aria-selected="false">ثبت نام</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="register-2" role="tabpanel"
                             aria-labelledby="register-tab-2">
                            <form method="post" asp-controller="Account" asp-action="register">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="register-email-2">آدرس ایمیل شما *</label>
                                    <input asp-for="Email" type="email" class="form-control" required>
                                    @*id="register-email-2"name="register-email" *@
                                </div>

                                <div class="form-group">
                                    <label for="register-password-2">رمز عبور *</label>
                                    <input asp-for="Password" type="password" class="form-control" required>
                                    @*id="register-password-2" name="register-password"*@
                                </div>

                                <div class="form-group">
                                    <label for="register-password-2">تکرار رمز عبور *</label>
                                    <input asp-for="Repassword" type="password" class="form-control" required>
                                    @*id="register-password-2"name="register-password" *@
                                </div>

                                <div class="form-footer">
                                    <a asp-controller="Account" asp-action="Login">حساب کاربری دارید؟</a>
                                </div>
                                <button type="submit" class="btn btn-outline-primary-2">
                                <span>ثبت نام</span>
                                    @*<i class="icon-long-arrow-left"></i>*@
                                </button>

                                @*
                                <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input"
                                id="register-policy-2" required>
                                <label class="custom-control-label" for="register-policy-2">
                                من با <a href="#">قوانین و مقررات</a> موافقم *
                                </label>
                                </div>*@
                                @*</div><!-- End .form-footer -->*@
                            </form>


                            @*                           <div class="form-choice">
                            <p class="text-center">یا ورود با </p>
                            <div class="row">
                            <div class="col-sm-6">
                            <a href="#" class="btn btn-login btn-g">
                            <i class="icon-google"></i>
                            حساب کاربری گوگل
                            </a>
                            </div><!-- End .col-6 -->
                            <div class="col-sm-6">
                            <a href="#" class="btn btn-login  btn-f">
                            <i class="icon-facebook-f"></i>
                            حساب کاربری فیسبوک
                            </a>
                            </div><!-- End .col-6 -->
                            </div><!-- End .row -->
                            </div><!-- End .form-choice -->*@


                        </div><!-- .End .tab-pane -->
                    </div><!-- End .tab-content -->
                </div><!-- End .form-tab -->
            </div><!-- End .form-box -->
        </div><!-- End .container -->
    </div><!-- End .login-page section-bg -->
</main><!-- End .main -->